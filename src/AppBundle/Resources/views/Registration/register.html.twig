{% extends '::base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}

    {#<link rel="stylesheet" href="{{ asset('bundles/user/css/login.css') }}" />#}
{% endblock %}
{% block body %}
<section class="container-fluid">
    <div class="row">
        <div class="col-xs-12 col-sm-4 col-sm-offset-4">
            <h1>Register</h1>
            <form action="{{ path('user_register') }}" method="POST" class="form-horizontal">
                {{ form_errors(form) }}
                <div class="form-group">
                    {{ form_label(form.username, null, {'attr': {'class': 'col-sm-3 control-label'}} ) }}
                    <div class="col-sm-9">
                        {{ form_widget(form.username, {'attr': {'class': 'form-control', 'placeholder': 'Username' }}) }}
                    </div>
                </div>
                <div class="form-group">
                    {{ form_label(form.email, null, {'attr': {'class': 'col-sm-3 control-label'}}) }}
                    <div class="col-sm-9">
                        {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Email Address'}}) }}
                    </div>
                </div>
                <div class="form-group">
                    {{ form_label(form.plainPassword.first, 'Password', {'attr': {'class': 'col-sm-3 control-label'}}) }}
                    <div class="col-sm-9">
                        {{ form_widget(form.plainPassword.first, {'attr': {'class': 'form-control', 'placeholder': 'Password'}}) }}
                    </div>
                </div>
                <div class="form-group">
                    {{ form_label(form.plainPassword.second, 'Repeat Password', {'attr': {'class': 'col-sm-3 control-label'}}) }}
                    <div class="col-sm-9">
                        {{ form_widget(form.plainPassword.second, {'attr': {'class': 'form-control', 'placeholder': 'Repeat Password'}}) }}
                    </div>
                </div>
                <input type="submit" class="btn btn-primary pull-right" value="Create an Account" />
                {{ form_rest(form) }}
            </form>
        </div>
    </div>
</section>

{% endblock %}